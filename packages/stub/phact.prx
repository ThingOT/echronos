<system>
    <modules>
        <module name="stub.build" />
        <module name="generic.debug" />
        <module name="stub.debug" />
        <module name="stub.rtos-phact">
            <api_asserts>true</api_asserts>
            <internal_asserts>true</internal_asserts>
            <fatal_error>fatal</fatal_error>
            <prefix>rtos</prefix>
            <taskid_size>8</taskid_size>
            <signalset_size>8</signalset_size>
            <signal_labels>
                <signal_label>
                    <name>s0</name>
                </signal_label>
            </signal_labels>
            <tasks>
                <task>
                    <name>t0</name>
                    <function>t0</function>
                    <priority>30</priority>
                    <stack_size>4096</stack_size>
                </task>
            </tasks>
            <mutexes>
                <mutex>
                    <name>m0</name>
                    <priority>42</priority>
                </mutex>
            </mutexes>
            <mutex>
                <stats>false</stats>
            </mutex>
            <semaphores>
                <semaphore>
                    <name>s0</name>
                </semaphore>
            </semaphores>
            <interrupt_events>
                <interrupt_event>
                    <name>i0</name>
                    <task>t0</task>
                    <sig_set>s0</sig_set>
                </interrupt_event>
            </interrupt_events>
            <timers>
                <timer>
                    <name>t0</name>
                </timer>
            </timers>
        </module>
        <module name="rtos-example.phact-test" />
    </modules>
