<system>
  <modules>
    <module name="machine-stm32f4-discovery.build" />
    <module name="armv7m.ctxt-switch-preempt" />
    <module name="armv7m.exception-preempt">
      <trampolines>
        <trampoline>
          <name>systick</name>
          <handler>tick_irq</handler>
        </trampoline>
      </trampolines>
    </module>
    <module name="armv7m.vectable">
      <flash_addr>0x8000000</flash_addr>
      <flash_size>0x100000</flash_size>
      <sram_size>0x20000</sram_size>
      <preemption>true</preemption>
      <systick>exception_preempt_trampoline_systick</systick>
    </module>
    <module name="armv7m.semihost-debug" />
    <module name="generic.debug" />

    <module name="armv7m.rtos-phact">
      <api_asserts>true</api_asserts>
      <internal_asserts>true</internal_asserts>
      <fatal_error>fatal</fatal_error>
      <prefix>rtos</prefix>
      <taskid_size>8</taskid_size>
      <signalset_size>8</signalset_size>

      <signal_labels>

        <signal_label>
          <name>demo_helper</name>
        </signal_label>

      </signal_labels>

      <tasks>

        <task>
          <name>a</name>
          <function>fn_a</function>
          <priority>30</priority>
          <stack_size>8192</stack_size>
        </task>

        <task>
          <name>b</name>
          <function>fn_b</function>
          <priority>10</priority>
          <stack_size>8192</stack_size>
        </task>

        <task>
          <name>z</name>
          <function>fn_z</function>
          <priority>5</priority>
          <stack_size>8192</stack_size>
        </task>

      </tasks>

      <semaphores>
        <semaphore>
          <name>sem0</name>
        </semaphore>
        <semaphore>
          <name>sem1</name>
        </semaphore>
        <semaphore>
          <name>sem2</name>
        </semaphore>
        <semaphore>
          <name>sem3</name>
        </semaphore>
        <semaphore>
          <name>sem4</name>
        </semaphore>
        <semaphore>
          <name>sem5</name>
        </semaphore>
      </semaphores>

      <semaphore_enable_max>true</semaphore_enable_max>

      <mutex>
        <stats>false</stats>
      </mutex>
    </module>

    <module name="machine-armv7m-common.example.machine-timer" />
    <!-- main .c file: -->
    <module name="rtos-example.sem-demo">
      <variant>phact</variant>
    </module>

  </modules>
</system>
